<?xml version="1.0" encoding="UTF-8"?>
<conf xmlns:xs="http://www.w3.org/2001/XMLSchema"
      xmlns:xd="http://www.oxygenxml.com/ns/doc/xsl"
      xmlns:sch="http://purl.oclc.org/dsdl/schematron"
      xmlns:xslq="https://github.com/mricaud/xsl-quality"
      xmlns="https://github.com/mricaud/xsl-quality">
   <param name="xslqual-FunctionComplexity-maxSize">50</param>
   <pattern idref="xslqual_mukulgandhi">
      <rule idref="xslqual_stylesheet">
         <assert idref="xslqual-RedundantNamespaceDeclarations"/>
         <report idref="xslqual-TooManySmallTemplates"/>
         <report idref="xslqual-MonolithicDesign"/>
         <report idref="xslqual-NotUsingSchemaTypes"/>
      </rule>
      <rule idref="xslqual_output">
         <report idref="xslqual-OutputMethodXml"/>
      </rule>
      <rule idref="xslqual_variable">
         <report idref="xslqual-SettingValueOfVariableIncorrectly"/>
         <assert idref="xslqual-UnusedVariable"/>
      </rule>
      <rule idref="xslqual_param">
         <report idref="xslqual-SettingValueOfParamIncorrectly"/>
         <assert idref="xslqual-UnusedParameter"/>
      </rule>
      <rule idref="xslqual_instructions">
         <report idref="xslqual-EmptyContentInInstructions"/>
      </rule>
      <rule idref="xslqual-functions">
         <assert idref="xslqual-UnusedFunction"/>
         <report idref="xslqual-FunctionComplexity"/>
      </rule>
      <rule idref="xslqual-template">
         <report idref="xslqual-UnusedNamedTemplate"/>
         <report idref="xslqual-TemplateComplexity"/>
      </rule>
      <rule idref="xslqual-element">
         <report idref="xslqual-NotCreatingElementCorrectly"/>
      </rule>
      <rule idref="xslqual-apply-templates">
         <report idref="xslqual-ConfusingVariableAndNode"/>
      </rule>
      <rule idref="xslqual-attributes">
         <report idref="xslqual-DontUseDoubleSlashOperatorNearRoot"/>
         <report idref="xslqual-DontUseDoubleSlashOperator"/>
         <report idref="xslqual-UsingNameOrLocalNameFunction"/>
         <report idref="xslqual-IncorrectUseOfBooleanConstants"/>
         <report idref="xslqual-UsingNamespaceAxis"/>
         <report idref="xslqual-CanUseAbbreviatedAxisSpecifier"/>
         <report idref="xslqual-UsingDisableOutputEscaping"/>
      </rule>
   </pattern>
   <pattern idref="xslt-quality_common">
      <report idref="xslt-quality_avoid-for-each"/>
      <report idref="xslt-quality_use-resolve-uri-instead-of-concat"/>
   </pattern>
   <pattern idref="xslt-quality_documentation">
      <rule idref="xslt-quality_documentation-stylesheet">
         <assert idref="xslt-quality_documentation-stylesheet-docblock"/>
      </rule>
   </pattern>
   <pattern idref="xslt-quality_namespaces">
      <rule idref="xslt-quality_namespaces_name">
         <assert idref="xslt-quality_ns-global-statements-need-prefix"/>
      </rule>
      <rule idref="xslt-quality_namespaces_mode">
         <assert idref="xslt-quality_ns-mode-statements-need-prefix"/>
      </rule>
      <rule idref="xslt-quality_namespaces_xpath">
         <report idref="xslt-quality_ns-do-not-use-wildcard-prefix"/>
      </rule>
   </pattern>
   <pattern idref="xslt-quality_typing">
      <report idref="xslt-quality_typing-with-as-attribute"/>
   </pattern>
   <pattern idref="xslt-quality_writing">
      <report idref="xslt-quality_writing-use-select-attribute-when-possible"/>
   </pattern>
   <pattern idref="xslt-quality_xslt-3.0">
      <report idref="xslt-quality_xslt-3.0-import-first"/>
   </pattern>
   <pattern idref="xslt-quality_debug">
      <rule idref="xslt-quality_debug-root"/>
   </pattern>
</conf>
